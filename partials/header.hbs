<header id="gh-head" class="site-header gh-head" data-theme="{{#is "home"}}transparent{{else}}solid{{/is}}" data-theme-state="{{#is "home"}}transparent{{else}}solid{{/is}}">
    <div class="site-header__inner gh-head-inner">
        <div class="site-brand gh-head-brand">
            <a class="site-logo gh-head-logo{{#unless @site.logo}} no-image{{/unless}}" href="{{@site.url}}">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}" loading="lazy" decoding="async">
                {{else}}
                    <span class="footer-logo">{{@site.title}}</span>
                {{/if}}
            </a>
            <button class="gh-burger" aria-expanded="false" aria-controls="site-navigation" aria-label="Toggle navigation">
                <span></span>
                <span></span>
            </button>
        </div>

        <nav id="site-navigation" class="site-nav gh-head-menu" aria-label="Primary">
            {{navigation}}
        </nav>

        <div class="site-actions gh-head-actions">
            <button class="gh-search gh-icon-btn" aria-label="Search this site" data-ghost-search>
                {{> "icons/search"}}
            </button>
            <a class="btn btn-primary" href="{{@site.url}}/plan-your-visit/">Plan Your Visit</a>
            {{#if @site.members_enabled}}
                <div class="gh-head-members">
                    {{#unless @member}}
                        {{#unless @site.members_invite_only}}
                            <a class="btn btn-secondary" href="#/portal/signup" data-portal="signup">Join the Farm</a>
                            <a class="gh-head-link" href="#/portal/signin" data-portal="signin">Sign in</a>
                        {{else}}
                            <a class="btn btn-secondary" href="#/portal/signin" data-portal="signin">Members</a>
                        {{/unless}}
                    {{else}}
                        <a class="btn btn-secondary" href="#/portal/account" data-portal="account">Account</a>
                    {{/unless}}
                </div>
            {{/if}}
        </div>
    </div>
</header>
