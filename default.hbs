<!DOCTYPE html>
<html lang="{{@site.locale}}"{{#match @custom.color_scheme "Dark"}} class="dark-mode"{{else match @custom.color_scheme "Auto"}} class="auto-color"{{/match}}>
<head>

    {{!-- Basic meta --}}
    <title>{{meta_title}}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">

    {{!-- Preload scripts --}}
    <link rel="preload" as="style" href="{{asset "built/screen.css"}}" />
    <link rel="preload" as="script" href="{{asset "built/casper.js"}}" />

    {{!-- Theme assets --}}
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />

    {{ghost_head}}

</head>
<body class="theme-farmstead {{body_class}}{{#match @custom.title_font "Modern sans-serif"}} title-font-sans{{/match}}{{#match @custom.title_font "Elegant serif"}} title-font-serif{{/match}}{{#match @custom.body_font "Modern sans-serif"}} body-font-sans{{/match}}{{#match @custom.body_font "Elegant serif"}} body-font-serif{{/match}}">
<a class="skip-link" href="#site-main">Skip to content</a>
<div class="site-wrapper">

    {{> "header"}}

    <main id="site-main" class="site-main">
        {{{body}}}
    </main>

    {{> "site-footer"}}

</div>

{{#is "post, page"}}
    {{> "lightbox"}}
{{/is}}

<script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous">
</script>
<script src="{{asset "built/casper.js"}}"></script>
<script>
$(document).ready(function () {
    $('.gh-burger').on('click', function () {
        const expanded = $(this).attr('aria-expanded') === 'true';
        $(this).attr('aria-expanded', !expanded);
        $('body').toggleClass('gh-head-open');
    });
    $(".gh-content").fitVids();
});
</script>

{{ghost_foot}}

</body>
</html>
