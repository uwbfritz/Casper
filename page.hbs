{{!< default}}

{{#post}}
<article class="post {{post_class}}">
    {{#if @page.show_title_and_feature_image}}
        {{#if feature_image}}
            {{#match @custom.post_image_style "Hidden"}}
            {{else}}
                <figure class="post-hero{{#match @custom.post_image_style "Full"}} post-hero--full{{/match}}{{#match @custom.post_image_style "Small"}} post-hero--small{{/match}}">
                    <img
                        src="{{img_url feature_image size="l"}}"
                        srcset="{{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w, {{img_url feature_image size="xl"}} 2000w"
                        sizes="(min-width: 1024px) 960px, 100vw"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    >
                    {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                    {{/if}}
                </figure>
            {{/match}}
        {{/if}}

        <header class="post-header content-width">
            <h1 class="post-title">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="post-excerpt">{{custom_excerpt}}</p>
            {{/if}}
        </header>
    {{/if}}

    <div class="post-content gh-content">
        {{content}}
    </div>
</article>
{{/post}}
